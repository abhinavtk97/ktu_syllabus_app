                android:onClick="Mech"

                />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button17"
                android:text="Graphics"
                android:layout_below="@+id/button14"
                android:layout_toEndOf="@+id/button16"
                android:onClick="Gra"
                />

            </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/R4"
                            android:id="@+id/R5"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:padding="8dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:layout_gravity="center"
                                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workshops and Labs"
                android:id="@+id/textView5"

                android:layout_alignParentStart="true"
                android:textColor="#3F51B5"
                />


            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button18"
                android:text="Physics Lab"
                android:layout_below="@+id/textView5"
                android:onClick="PhyL"

                 />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button19"
                android:text="Chemistry Lab"
                android:layout_below="@+id/textView5"
                android:layout_toEndOf="@+id/button18"
                android:onClick="CheL"
                />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button20"
                android:text="Civil Workshop"
                android:layout_below="@+id/button18"
                android:onClick="CivW"

                />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button21"
                android:text="Mechanical Workshop"
                android:layout_below="@+id/button18"
                android:layout_toEndOf="@+id/button20"
                android:onClick="MechW"
                />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button22"
                android:text="Electrical Workshop"
                android:layout_below="@+id/button20"
                android:onClick="EEW"

                 />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button23"
                android:text="Electronics Workshop"
                android:layout_below="@+id/button20"
                android:layout_toEndOf="@+id/button22"
                android:onClick="LCW"
                />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button24"
                android:text="Computer Workshop"
                android:layout_below="@+id/button22"
                android:onClick="CSW"

                 />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button25"
                android:text="Chemical Workshop"
                android:layout_below="@+id/button22"
                android:layout_toEndOf="@+id/button24"
                android:onClick="CheW"
                />
                </RelativeLayout>
                </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/R5"
                                    android:id="@+id/R6"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:padding="8dp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:id="@+id/textView6"

                android:layout_alignParentStart="true"
                android:textColor="#3F51B5"
                />


            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button26"
                android:text="Design Engineering"
                android:layout_below="@+id/textView6"
                android:onClick="DE"

                />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>

        </RelativeLayout>






    </ScrollView>


</RelativeLayout>
