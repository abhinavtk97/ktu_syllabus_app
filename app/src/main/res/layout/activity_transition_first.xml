<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    >

    <View
        android:id="@+id/activity_transition_header"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:transitionName="holder1"

        android:background="?android:colorPrimary"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KTU Syllabus"
        android:id="@+id/welcomenote"
        android:textSize="25dp"
        android:layout_above="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <Button
        android:id="@+id/fab_button"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:transitionName="fab"
        android:text="More"
        android:layout_marginTop="-26dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/activity_transition_header"
        android:layout_alignParentEnd="true"
        android:elevation="5dp"
        android:background="@drawable/ripple_round"
        android:stateListAnimator="@anim/fab_anim"
        android:onClick="onFabPressed"


        android:textColor="#ffffffff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_transition_header"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/R1"
                android:padding="8dp"
                android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:layout_below="@id/activity_transition_header"
            android:layout_gravity="center"
            >
            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Civil Engineering"
                android:id="@+id/button"
                android:layout_below="@+id/button4"
                android:layout_alignParentStart="true"
                android:onClick="IntCivil" />
            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Mechanical Engineering"
                android:id="@+id/button2"
                android:layout_below="@+id/button"
                android:layout_alignParentStart="true"
                android:onClick="IntMech" />
            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button4"
                android:text="Electronics Engineering"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:onClick="IntLc" />
            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="ICPS"
                android:id="@+id/button5"
                android:layout_alignTop="@+id/button2"
                android:layout_toEndOf="@+id/button2"
                android:onClick="ICPS" />
            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Chemical Engineering"
                android:id="@+id/button6"
                android:layout_alignTop="@+id/button"
                android:layout_toEndOf="@+id/button"
                android:onClick="IntChem" />
            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Sustainable Engineering"
                android:id="@+id/button7"
                android:layout_alignTop="@+id/button4"
                android:layout_toEndOf="@+id/button4"
                android:onClick="IntSus" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction to"
                android:id="@+id/textView"
                android:phoneNumber="false"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />


            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button3"
                android:text="Electrical Engineering"
                android:layout_below="@+id/button5"
                android:layout_alignParentStart="true"
                android:onClick="IntEle" />

            </RelativeLayout>
    </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/R2"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/R1">

            <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
                android:layout_gravity="center">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basics of"
                android:id="@+id/textView2"
                android:textColor="#3F51B5"

                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button8"
                android:text="Civil Engineering"
                android:layout_below="@+id/textView2"
                android:layout_alignParentStart="true"
                android:onClick="BCE" />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button9"
                android:text="Mechanical Engineering"
                android:layout_alignBottom="@+id/button8"
                android:layout_toEndOf="@+id/button8"
                android:onClick="BME" />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button10"
                android:text="Electrical Engineering"
                android:layout_below="@+id/button8"
                android:layout_alignParentStart="true"
                android:onClick="BEE" />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button11"
                android:text="Electronics Engineering"
                android:layout_below="@+id/button8"
                android:layout_toEndOf="@+id/button8"
                android:onClick="BLC" />

    </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/R2"
                android:id="@+id/R3"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:padding="8dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mathematics"
                android:id="@+id/textView3"

                android:layout_alignParentStart="true"
                android:textColor="#3F51B5"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button12"
                android:text="Calculus"
                android:layout_below="@+id/textView3"
                android:onClick="Cal"

                />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button13"
                android:text="Differential Equation"
                android:layout_below="@+id/textView3"
                android:layout_toEndOf="@+id/button12"
                android:onClick="Diff"
                />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/R3"
                    android:id="@+id/R4"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:padding="8dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Engineering"
                android:id="@+id/textView4"

                android:layout_alignParentStart="true"
                android:textColor="#3F51B5"/>


            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button14"
                android:text="Physics"
                android:layout_below="@+id/textView4"
                android:onClick="Phy"
                />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button15"
                android:text="Chemistry"
                android:layout_below="@+id/textView4"
                android:layout_toEndOf="@+id/button14"
                android:onClick="Chem"
                />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button16"
